# Hotel Operations Assistant Configuration

# Application Settings
APP_NAME="Hotel Operations Assistant"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security Configuration
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/hotel_ops"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# AI/LLM Configuration
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
DEFAULT_LLM_PROVIDER="openai"
DEFAULT_MODEL="gpt-4-turbo-preview"
BACKUP_MODEL="gpt-3.5-turbo"
MAX_TOKENS=4000
TEMPERATURE=0.1

# Hotel System Integrations (Mock URLs)
PMS_API_URL="http://localhost:8001"
POS_API_URL="http://localhost:8002"
CRM_API_URL="http://localhost:8003"
SECURITY_API_URL="http://localhost:8004"
MAINTENANCE_API_URL="http://localhost:8005"

# Compliance and Privacy
ENABLE_PII_PROTECTION=true
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=365
ENABLE_GDPR_COMPLIANCE=true
ENABLE_DPDP_COMPLIANCE=true
ENABLE_PCI_DSS_COMPLIANCE=true

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_ENDPOINT=""

# Performance Configuration
RATE_LIMIT_PER_MINUTE=60
CACHE_TTL_SECONDS=300
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_REQUESTS=100

# Hotel Configuration
HOTEL_BRAND="IHCL"
HOTEL_TYPE="luxury"
HOTEL_ROOMS=450
HOTEL_TIMEZONE="Asia/Kolkata"
HOTEL_CURRENCY="INR"
HOTEL_LANGUAGES="en,hi,ta,te,bn"

# Emergency Contacts
SECURITY_TEAM_EMAIL="security@hotel.com"
MANAGEMENT_EMAIL="management@hotel.com"
IT_SUPPORT_EMAIL="it@hotel.com"
ESCALATION_PHONE="+91-11-12345678"