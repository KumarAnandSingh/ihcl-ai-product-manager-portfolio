# Security Incident Triage Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
SECURITY_TRIAGE_ENVIRONMENT=development
SECURITY_TRIAGE_DEBUG_MODE=true
SECURITY_TRIAGE_LOG_LEVEL=INFO

# ============================================================================
# API KEYS (Required)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
SECURITY_TRIAGE_DATABASE_PATH=data/security_incidents.db
SECURITY_TRIAGE_CHECKPOINT_DB_PATH=data/workflow_checkpoints.db
SECURITY_TRIAGE_DATA_RETENTION_DAYS=365

# ============================================================================
# REDIS SETTINGS
# ============================================================================
SECURITY_TRIAGE_REDIS_URL=redis://localhost:6379/0
SECURITY_TRIAGE_SESSION_TTL_HOURS=24

# ============================================================================
# LLM SETTINGS
# ============================================================================
SECURITY_TRIAGE_LLM_MODEL=gpt-4
SECURITY_TRIAGE_LLM_TEMPERATURE=0.1
SECURITY_TRIAGE_LLM_MAX_TOKENS=4000
SECURITY_TRIAGE_LLM_TIMEOUT_SECONDS=120

# ============================================================================
# WORKFLOW SETTINGS
# ============================================================================
SECURITY_TRIAGE_MAX_WORKFLOW_STEPS=20
SECURITY_TRIAGE_WORKFLOW_TIMEOUT_MINUTES=30
SECURITY_TRIAGE_ENABLE_CHECKPOINTS=true

# ============================================================================
# SAFETY AND COMPLIANCE SETTINGS
# ============================================================================
SECURITY_TRIAGE_ENABLE_SAFETY_GUARDRAILS=true
SECURITY_TRIAGE_ENABLE_COMPLIANCE_CHECKS=true
SECURITY_TRIAGE_ENABLE_HUMAN_INTERVENTION=true
SECURITY_TRIAGE_MAX_HALLUCINATION_RATE=0.05

# ============================================================================
# HOSPITALITY SETTINGS
# ============================================================================
SECURITY_TRIAGE_PROPERTY_TYPE=business_hotel
SECURITY_TRIAGE_PROPERTY_CODE=HOTEL_001
SECURITY_TRIAGE_GUEST_PRIVACY_LEVEL=high

# ============================================================================
# MONITORING SETTINGS
# ============================================================================
SECURITY_TRIAGE_ENABLE_METRICS_COLLECTION=true
SECURITY_TRIAGE_METRICS_EXPORT_INTERVAL_MINUTES=5
SECURITY_TRIAGE_ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
SECURITY_TRIAGE_ENABLE_AUDIT_LOGGING=true
SECURITY_TRIAGE_ENCRYPT_SENSITIVE_DATA=true

# ============================================================================
# FILE PATHS
# ============================================================================
SECURITY_TRIAGE_LOG_DIRECTORY=logs
SECURITY_TRIAGE_DATA_DIRECTORY=data
SECURITY_TRIAGE_CONFIG_DIRECTORY=config